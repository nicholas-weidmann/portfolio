---
import NavbarLayout from '../../layouts/NavbarLayout.astro'

export function getStaticPaths() {
  return [{ params: { project: 'test_client' } }]
}

const { project } = Astro.params
---

<NavbarLayout title="Nicholas Weidmann">
  <div class="flex justify-center px-2 md:px-8">
    <div class="card bg-base-200 shadow-xl" transition:name="card-test_client">
      <figure>
        <img src="/images/mmocld-test_client.png" alt="mmocld test_client" transition:name="img-test_client" />
      </figure>
      <div class="card-body">
        <h1 class="card-title text-4xl" transition:name="title-test_client">Test Client</h1>
        <div class="badge badge-secondary" transition:name="group_tag-test_client">mmocld</div>
        <p transition:name="short_desc-test_client">If a dog chews shoes whose shoes does he choose?</p>
        <div class="card-actions justify-end font-semibold" transition:name="tech_tags-test_client">
          <div class="badge badge-accent">Angular</div>
          <div class="badge badge-primary">API</div>
          <div class="badge badge-primary">OpenID Connect</div>
        </div>
      </div>
    </div>
  </div>
</NavbarLayout>
