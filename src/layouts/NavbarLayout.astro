---
import BaseLayout from './BaseLayout.astro'
import ThemeController from '../components/theme-controller.astro'

function onPath(path: string) {
  return Astro.url.pathname === path ? 'btn-primary' : 'btn-neutral'
}
---

<BaseLayout title="Nicholas Weidmann">
  <div class="mx-auto min-h-screen max-w-screen-xl">
    <div class="navbar mt-8 rounded-box bg-base-300 shadow-xl">
      <div class="flex flex-1 gap-8">
        <a class="btn btn-ghost" href="/" transition:name="title">
          <kbd class="kbd text-base-content">Esc</kbd>Nicholas Weidmann
        </a>
        <a class:list={['btn', onPath('/experience')]} href="/experience" transition:name="btn-experience">
          <kbd class="kbd text-base-content">1</kbd>Experience
        </a>
        <a class:list={['btn', onPath('/projects')]} href="/projects" transition:name="btn-projects">
          <kbd class="kbd text-base-content">2</kbd>Projects
        </a>
        <a class:list={['btn', onPath('/about')]} href="/about" transition:name="btn-about">
          <kbd class="kbd text-base-content">3</kbd>About
        </a>
      </div>
      <div class="skeleton h-12 w-12 flex-none rounded-full" data-theme="light" transition:name="profile"></div>
      <ThemeController />
    </div>

    <div class="mt-16">
      <slot />
    </div>
  </div>
</BaseLayout>
