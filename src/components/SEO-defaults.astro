---
import { SEO } from 'astro-seo'

interface Props {
  subtitle?: string
  descriptionOverride?: string
  imageOverride?: string
}
const { subtitle, descriptionOverride, imageOverride } = Astro.props

const title = 'Nicholas Weidmann - Portfolio' + (subtitle ? ' - ' + subtitle : '')
const description = descriptionOverride
  ? descriptionOverride
  : 'System Engineer and hobby Game Developer living in Switzerland, currently working at SIX, Swiss Infrastructure and Exchange.'
const baseUrl = 'https://portfolio.pixceleration.com'
const imageUrl = imageOverride ? baseUrl + imageOverride : baseUrl + '/images/portfolio.png'
---

<SEO
  title={title}
  description={description}
  canonical={baseUrl}
  openGraph={{
    basic: {
      title: title,
      type: 'image',
      image: imageUrl,
      url: baseUrl,
    },
    optional: {
      description: description,
    },
  }}
  twitter={{
    title: title,
    description: description,
    image: imageUrl,
    card: 'summary_large_image',
    creator: '@nicholas-weidmann',
    site: '@pixceleration',
    imageAlt: title,
  }}
  charset="utf-8"
  extend={{
    link: [
      { rel: 'icon', type: 'image/svg+xml', href: '/favicon.svg' },
      { rel: 'sitemap', href: '/sitemap-index.xml' },
    ],
    meta: [
      { name: 'viewport', content: 'width=device-width' },
      { name: 'google-site-verification', content: 'q2ZMQn1LluS1g6hOy5xT1exVydup86NFlU1GMH3LI80' },
    ],
  }}
/>
